<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_wcs_tip"
        android:background="@color/colorAccent"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:text="提示"
        android:padding="10dp"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_carIdInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:hint="请输入小车的id"
            android:inputType="number"
            android:gravity="center"
            android:padding="12dp"
            android:textSize="12sp"
            android:visibility="gone"
            android:background="@drawable/edittext_layer_drawable"
            android:layout_width="match_parent"
            android:id="@+id/et_carIdInput"
            android:layout_height="wrap_content" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_podIdInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:visibility="gone"
            android:hint="请输入POD的id"
            android:inputType="number"
            android:gravity="center"
            android:padding="12dp"
            android:textSize="12sp"
            android:background="@drawable/edittext_layer_drawable"
            android:layout_width="match_parent"
            android:id="@+id/et_podIdInput"
            android:layout_height="wrap_content" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_addrInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:visibility="gone"
            android:hint="请输入地址"
            android:inputType="number"
            android:gravity="center"
            android:padding="12dp"
            android:textSize="12sp"
            android:background="@drawable/edittext_layer_drawable"
            android:layout_width="match_parent"
            android:id="@+id/et_addrInput"
            android:layout_height="wrap_content" />

    </android.support.design.widget.TextInputLayout>

    <Spinner
        android:visibility="gone"
        android:id="@+id/sp_robotAct"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"/>

    <Button
        android:foreground="@drawable/water_ripple_foreground"
        android:background="@drawable/button_selector_rect"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:text="发送"
        android:id="@+id/btn_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
