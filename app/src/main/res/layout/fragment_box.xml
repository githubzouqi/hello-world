<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_mapView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:padding="4dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:background="@android:color/white"
                android:orientation="vertical">

                <com.example.pc2.carmapproject.view.BoxView
                    android:id="@+id/boxView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/normal"
                    android:visibility="gone" />

                <!--<com.example.pc2.carmapproject.view.BoxSurfaceView-->
                <!--android:visibility="gone"-->
                <!--android:background="@android:color/transparent"-->
                <!--android:id="@+id/boxView"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content" />-->

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_lock_unlock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:visibility="gone">

                <Button
                    android:id="@+id/btn_cancel_lockunlock"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/button_selector"
                    android:text="取消"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btn_confirm_lockunlock"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/button_selector"
                    android:text="确定"
                    android:textColor="@color/white" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/monitor_slogan"
                android:textSize="24sp"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/linear_operate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@android:color/white"
                android:visibility="visible"
                android:weightSum="1">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="60dp"
                        android:layout_marginRight="60dp"
                        android:orientation="horizontal"
                        android:padding="6dp"
                        android:weightSum="1">

                        <Button
                            android:id="@+id/btn_initStorageMap"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:background="@drawable/button_selector"
                            android:text="@string/str_step1"
                            android:textAllCaps="false"
                            android:textColor="@color/white" />

                        <Button
                            android:id="@+id/btn_drawing"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="0.5"
                            android:background="@drawable/button_selector"
                            android:text="@string/str_step2"
                            android:visibility="gone"
                            android:textColor="@color/white" />

                        <Button
                            android:id="@+id/btn_init_data"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="0.34"
                            android:background="@drawable/button_selector"
                            android:text="@string/str_step3"
                            android:textColor="@color/white"
                            android:visibility="gone" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_above="@+id/linear_operate"
                android:background="@android:color/darker_gray" />

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/linear_map_introduction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="6dp"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/map_introduction_selector"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/iv_map_introduction"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@mipmap/map_introduction" />

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center"
                            android:text="@string/str_map_introduction"
                            android:textColor="@android:color/black"
                            android:textSize="6sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_map_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/linear_map_introduction"
                        android:layout_marginRight="6dp"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/map_introduction_selector"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/iv_map_info"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@mipmap/map_info" />

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center"
                            android:text="@string/str_map_info"
                            android:textColor="@android:color/black"
                            android:textSize="6sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_map_reset"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/linear_map_info"
                        android:layout_marginRight="6dp"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/map_introduction_selector"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/iv_map_reset"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@mipmap/view_restore" />

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center"
                            android:text="@string/str_map_reset"
                            android:textColor="@android:color/black"
                            android:textSize="6sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_map_drawAgain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/linear_map_reset"
                        android:layout_marginRight="6dp"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/map_introduction_selector"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/iv_map_drawAgain"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@mipmap/draw_again" />

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center"
                            android:text="@string/str_map_drawAgain"
                            android:textColor="@android:color/black"
                            android:textSize="6sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_map_carLockUnLock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/linear_map_drawAgain"
                        android:layout_marginRight="6dp"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/map_introduction_selector"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/iv_map_carLockUnLock"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@mipmap/lock_unlock" />

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center"
                            android:text="@string/str_map_carLockUnLock"
                            android:textColor="@android:color/black"
                            android:textSize="4sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_map_carBatteryInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/linear_map_carLockUnLock"
                        android:layout_marginRight="6dp"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/map_introduction_selector"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/iv_map_carBatteryInfo"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@mipmap/car_battery_info" />

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center"
                            android:text="@string/str_map_carBatteryInfo"
                            android:textColor="@android:color/black"
                            android:textSize="6sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_map_wcs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/linear_map_carBatteryInfo"
                        android:layout_marginRight="6dp"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/map_introduction_selector"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/iv_map_wcs"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_margin="2dp"
                            android:src="@mipmap/icon_wcs" />

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center"
                            android:text="WCS部分"
                            android:textColor="@android:color/black"
                            android:textSize="6sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_map_rcs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/linear_map_carBatteryInfo"
                        android:layout_marginRight="6dp"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/map_introduction_selector"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/iv_map_rcs"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_margin="2dp"
                            android:src="@mipmap/icon_rcs" />

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center"
                            android:text="RCS部分"
                            android:textColor="@android:color/black"
                            android:textSize="6sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_zoomOutIn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/linear_map_rcs"
                        android:layout_marginRight="6dp"
                        android:layout_marginTop="6dp"
                        android:background="@android:color/white"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/iv_zoomOut"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_margin="2dp"
                            android:background="@drawable/map_introduction_selector"
                            android:src="@mipmap/zoom_out" />


                        <ImageView
                            android:id="@+id/iv_zoomIn"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_margin="2dp"
                            android:layout_marginTop="1px"
                            android:background="@drawable/map_introduction_selector"
                            android:src="@mipmap/zoom_in" />

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                android:padding="2dp"
                android:weightSum="1">

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab_path_display"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="6dp"
                    android:backgroundTint="@color/menu_color"
                    android:clickable="true"
                    android:src="@mipmap/icon_path_show"
                    android:visibility="gone"
                    app:borderWidth="0dp"
                    app:fabSize="auto"
                    app:layout_anchor="@id/linear_operate"
                    app:layout_anchorGravity="center"
                    app:rippleColor="@android:color/white" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab_path_hide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="6dp"
                    android:backgroundTint="@color/menu_color"
                    android:clickable="true"
                    android:src="@mipmap/icon_path_dismiss"
                    android:visibility="gone"
                    app:borderWidth="0dp"
                    app:fabSize="auto"
                    app:layout_anchor="@id/linear_operate"
                    app:layout_anchorGravity="center"
                    app:rippleColor="@android:color/white" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_error_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@color/colorAccent"
                android:clickable="true"
                android:orientation="vertical"
                android:padding="10dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="故障提示"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />

                <ImageButton
                    android:id="@+id/imgBtn_errorTip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="6dp"
                    android:background="@android:color/white"
                    android:src="@mipmap/error_tip" />

                <LinearLayout
                    android:id="@+id/linear_error_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_error_scan_pod"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_scan_pod_error"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/iv_error_nomove_timeout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_nomove_timeout_error1"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/iv_error_close_connection"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_close_connection_error"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/iv_error_chargepile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_chargepile_error"
                        android:visibility="gone" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_problem_solve_or_not"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="6dp"
                    android:clickable="true"
                    android:text="问题是否解决？"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/linear_agv_pod_locate"
                android:background="@drawable/border_drawable"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="55dp"
                android:orientation="vertical">

                <RadioGroup
                    android:layout_margin="2dp"
                    android:weightSum="1"
                    android:background="@android:color/white"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:textSize="12sp"
                        android:id="@+id/rbt_agv"
                        android:text="AGV"
                        android:textColor="@color/colorAccent"
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <RadioButton
                        android:textColor="@color/colorAccent"
                        android:textSize="12sp"
                        android:id="@+id/rbt_pod"
                        android:layout_marginLeft="10dp"
                        android:text="POD"
                        android:checked="true"
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                </RadioGroup>

                <TextView
                    android:clickable="true"
                    android:id="@+id/tv_agv_pod"
                    android:padding="10dp"
                    android:text="请键入号码 "
                    android:textColor="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:padding="4dp"
                    android:weightSum="1"
                    android:orientation="horizontal"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:background="@android:color/white"
                        android:text="7"
                        android:id="@+id/tv_num7"
                        android:clickable="true"
                        android:foreground="@drawable/water_ripple_foreground"
                        android:padding="6dp"
                        android:gravity="center"
                        android:layout_weight="0.33"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:gravity="center"
                        android:padding="6dp"
                        android:background="@android:color/white"
                        android:clickable="true"
                        android:foreground="@drawable/water_ripple_foreground"
                        android:text="8"
                        android:id="@+id/tv_num8"
                        android:layout_width="0dp"
                        android:layout_weight="0.33"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:gravity="center"
                        android:padding="6dp"
                        android:background="@android:color/white"
                        android:clickable="true"
                        android:foreground="@drawable/water_ripple_foreground"
                        android:text="9"
                        android:id="@+id/tv_num9"
                        android:layout_weight="0.34"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:padding="4dp"
                    android:weightSum="1"
                    android:orientation="horizontal"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:background="@android:color/white"
                        android:text="4"
                        android:id="@+id/tv_num4"
                        android:clickable="true"
                        android:foreground="@drawable/water_ripple_foreground"
                        android:padding="6dp"
                        android:gravity="center"
                        android:layout_weight="0.33"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:gravity="center"
                        android:padding="6dp"
                        android:background="@android:color/white"
                        android:clickable="true"
                        android:foreground="@drawable/water_ripple_foreground"
                        android:text="5"
                        android:id="@+id/tv_num5"
                        android:layout_width="0dp"
                        android:layout_weight="0.33"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:gravity="center"
                        android:padding="6dp"
                        android:background="@android:color/white"
                        android:clickable="true"
                        android:foreground="@drawable/water_ripple_foreground"
                        android:text="6"
                        android:id="@+id/tv_num6"
                        android:layout_weight="0.34"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:padding="4dp"
                    android:weightSum="1"
                    android:orientation="horizontal"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:background="@android:color/white"
                        android:text="1"
                        android:id="@+id/tv_num1"
                        android:clickable="true"
                        android:foreground="@drawable/water_ripple_foreground"
                        android:padding="6dp"
                        android:gravity="center"
                        android:layout_weight="0.33"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_num2"
                        android:gravity="center"
                        android:padding="6dp"
                        android:background="@android:color/white"
                        android:clickable="true"
                        android:foreground="@drawable/water_ripple_foreground"
                        android:text="2"
                        android:layout_width="0dp"
                        android:layout_weight="0.33"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_num3"
                        android:gravity="center"
                        android:padding="6dp"
                        android:background="@android:color/white"
                        android:clickable="true"
                        android:foreground="@drawable/water_ripple_foreground"
                        android:text="3"
                        android:layout_weight="0.34"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:padding="4dp"
                    android:weightSum="1"
                    android:orientation="horizontal"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_num0"
                        android:background="@android:color/white"
                        android:text="0"
                        android:clickable="true"
                        android:foreground="@drawable/water_ripple_foreground"
                        android:padding="6dp"
                        android:gravity="center"
                        android:layout_weight="0.33"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/iv_clear_agv_pod"
                        android:src="@mipmap/icon_clear"
                        android:clickable="true"
                        android:foreground="@drawable/water_ripple_foreground"
                        android:layout_width="0dp"
                        android:layout_weight="0.33"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/iv_locate_agv_pod"
                        android:src="@mipmap/icon_locate"
                        android:clickable="true"
                        android:foreground="@drawable/water_ripple_foreground"
                        android:layout_width="0dp"
                        android:layout_weight="0.33"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:clickable="true"
                android:id="@+id/iv_open_close"
                android:layout_alignParentRight="true"
                android:layout_marginRight="6dp"
                android:foreground="@drawable/water_ripple_foreground"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_open"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:clickable="true"
                android:id="@+id/iv_tips_open_close"
                android:layout_marginRight="6dp"
                android:foreground="@drawable/water_ripple_foreground"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:visibility="gone"
                android:padding="2dp"
                android:background="@color/colorAccent"
                android:id="@+id/linear_tips"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_tips_open_close"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:clickable="true"
                    android:weightSum="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="0.8"
                        android:id="@+id/tv_tips_select"
                        android:layout_gravity="center"
                        android:textColor="@android:color/white"
                        android:text="请选择"
                        android:textSize="12sp"
                        android:padding="10dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/iv_tips_select"
                        android:layout_weight="0.2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:clickable="true"
                        android:foreground="@drawable/water_ripple_foreground"
                        android:src="@mipmap/ic_tip_more" />

                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view_tips"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <TextView
                android:text="定位位置"
                android:id="@+id/tv_pod_car_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/colorRed"
                android:textSize="48sp"
                android:visibility="gone" />

        </RelativeLayout>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:clickable="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="6dp"
        android:backgroundTint="@color/menu_color"
        app:borderWidth="0dp"
        app:fabSize="auto"
        app:rippleColor="@android:color/white"
        android:src="@mipmap/icon_menu"
        app:layout_anchor="@id/linear_operate"
        app:layout_anchorGravity="bottom|right"
        android:id="@+id/fab_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</android.support.design.widget.CoordinatorLayout>
